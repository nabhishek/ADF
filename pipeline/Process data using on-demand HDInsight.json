{
	"name": "Process data using on-demand HDInsight",
	"properties": {
		"activities": [
			{
				"name": "processData",
				"type": "HDInsightSpark",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"rootPath": "adftutorial/spark/script",
					"entryFilePath": "WordCount_Spark.py",
					"getDebugInfo": "Always",
					"sparkJobLinkedService": {
						"referenceName": "hdiOnDemand_storage_ls",
						"type": "LinkedServiceReference"
					}
				},
				"linkedServiceName": {
					"referenceName": "hdiOnDemand_ls",
					"type": "LinkedServiceReference"
				}
			}
		]
	}
}